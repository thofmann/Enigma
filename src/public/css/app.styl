body
    background-color: #eeeeee

h1
    margin-top: 40px
    margin-bottom: 30px
    text-align: center
    font-family: 'Courier New', Courier, 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace
    font-size: 3.5em

.page
    width: 800px
    max-width: 90%
    margin: 0 auto 0 auto

.block
    width: 100%

#suggestions
    width: 100%
    box-sizing: border-box
    border: 1px solid #aaa

.suggestion
    width: 100%
    background-color: #ffffff
    color: #000
    display: block
    padding: 0.25em
    text-decoration: none
    box-sizing: border-box

.suggestion:hover
    background-color: #b0bcff

#copyable
    position: fixed
    top: -1000px
    left: -1000px
